{
    "default_profile": "Fallback",
    "profiles": {
        "Fallback": {
            "browser": "OsDefault"
        },
        "Personal": {
            "browser": "Firefox"
        },
        "Work": {
            "browser": "Chrome",
            "hosted_domain": "mycorp.com"
        },
        "After Dark": {
            "browser": "Chrome",
            "profile": "Profile 1"
        },
        "Most Recent Chrome Window": {
            "browser": "Chrome"
        },
        "That One Profile For Edge": {
            "browser": "Edge",
            "profile": "Profile 2"
        },
        "Video Player": {
