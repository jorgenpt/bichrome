        },
        {
            "profile": "Personal",
            "pattern": "*.messenger.com"
        },
        {
            "profile": "Work",
            "pattern": "*.mycorp.net"
        },
        {
            "profile": "Work",
            "pattern": "mycorp.atlassian.net"
        },
        {
            "profile": "Work",
            "pattern": "https://github.com/MyCorp/*"
        },
        {
            "profile": "Personal",
            "pattern": "*.github.com"
        },
        {
            "profile": "Video Player",
            "pattern": "*.youtube.com"
        },
        {
            "profile": "Video Player",
            "pattern": "youtu.be"
        }
